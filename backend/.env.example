# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# MongoDB Configuration
# ===========================================
MONGODB_URI=mongodb://localhost:27017/aqua-forum

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# ===========================================
# Vision LLM Configuration
# ===========================================
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=
LLM_MODEL_ID=llava:latest
LLM_TIMEOUT=60000
LLM_MAX_RETRIES=3

# ===========================================
# Redis Configuration (for queues)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Media Service Provider Configuration
# ===========================================
# Options: 'cloudinary', 'shortpixel', 'local'
MEDIA_SERVICE_PROVIDER=cloudinary

# ===========================================
# Cloudinary Configuration (if MEDIA_SERVICE_PROVIDER=cloudinary)
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# ShortPixel Configuration (if MEDIA_SERVICE_PROVIDER=shortpixel)
# ===========================================
SHORTPIXEL_API_KEY=your-shortpixel-api-key
SHORTPIXEL_API_URL=https://api.shortpixel.com/v2
SHORTPIXEL_RETRY_COUNT=3
SHORTPIXEL_TIMEOUT=30000

# ===========================================
# Image Processing Configuration
# ===========================================
# Maximum long side for resized images (0 = no resize)
IMAGE_MAX_LONG_SIDE=1024
IMAGE_QUALITY=85
IMAGE_FORMAT=jpg
# Output format: jpg, png, webp, auto
IMAGE_OUTPUT_FORMAT=auto

# ===========================================
# Queue Configuration
# ===========================================
# Maximum concurrent jobs for vision processing
VISION_QUEUE_CONCURRENCY=2
# Retry settings
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000
QUEUE_RETRY_BACKOFF=2
# Job timeout in milliseconds
VISION_JOB_TIMEOUT=120000

# ===========================================
# Local Storage Configuration (if MEDIA_SERVICE_PROVIDER=local)
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880